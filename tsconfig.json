{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/components/*": ["src/components/*"],
            "@/lib/*": ["src/lib/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/ui/*": ["src/components/ui/*"]
        },
        "skipLibCheck": true
    },
    "include": ["./**/*"]
}
